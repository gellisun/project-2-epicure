<%- include('../partials/header') %>
<nav class="nav-style">
  <% if (user) { %>
    <a href="/logout" class="logout">LOG OUT</a>
    <% } else { %>
      <a href="/auth/google" class="login">LOG IN&nbsp;<img src="https://i.imgur.com/FHjYyi0.png"></a>
      <% } %>
      &nbsp;
      <a href="/posts/<%= post._id %>">Go Back</a>
</nav>
<main>
<h1>epicure</h1>
    <h2>Edit Post</h2>
  <form action="/posts/<%= post._id %>?_method=PUT" method="POST">
    <input type="hidden" name="_method" value="PUT">
    <label for="title">Title:</label>
    <input type="text" name="title" value="<%= post.title %>" required>
    <label for="description">Description:</label>
    <input type="text" name="description" value="<%= post.description %>" required>
    <label for="link">Link:</label>
    <input type="text" name="link" value="<%= post.link %>">
    <label for="content">Content:</label>
    <textarea name="content" required><%= post.content %></textarea>
    <button id="update-btn" type="submit">Update</button>
  </form>
<%- include('../partials/footer') %>
